<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="WhiteSerifText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_buttons_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ViewMarginHorizontal">
        <item name="android:layout_marginRight">@dimen/margin_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal</item>
    </style>

    <style name="ViewMarginHorizontalInner">
        <item name="android:layout_marginRight">@dimen/margin_horizontal_inner</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_inner</item>
    </style>

    <style name="LoginEditText" parent="ViewMarginHorizontal">
        <item name="android:paddingRight">@dimen/margin_horizontal_inner</item>
        <item name="android:paddingLeft">@dimen/margin_horizontal_inner</item>
    </style>

</resources>
